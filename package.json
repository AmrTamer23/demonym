{
  "name": "demonym",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript utility for transforming nationality to country names and vice versa, with support for 100+ countries, aliases, and historical names.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc",
    "build:esm": "tsc --module esnext --outDir dist/esm && mv dist/esm/index.js dist/index.esm.js && rm -rf dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "nationality",
    "country",
    "demonym",
    "transformer",
    "typescript",
    "iso-3166",
    "country-codes",
    "internationalization",
    "i18n",
    "geography",
    "mapping",
    "conversion"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/amrtamer23"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amrtamer23/demonym.git"
  },
  "bugs": {
    "url": "https://github.com/amrtamer23/demonym/issues"
  },
  "homepage": "https://github.com/amrtamer23/demonym#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
